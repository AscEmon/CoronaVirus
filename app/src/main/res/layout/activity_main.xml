<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="10dp"
            app:cardElevation="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বাংলাদেশ"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"

                    ></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000">


                </View>



            </LinearLayout>


            <TextView
                android:id="@+id/TotalAffected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=" মোট আক্রান্ত - "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="190dp"
                android:layout_marginBottom="5dp"

                >



            </TextView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    >

    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_weight="1"
        >


    </org.eazegraph.lib.charts.PieChart>



<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"


        >
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#FD8F02"
            />
        <TextView
            android:id="@+id/todayAffected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আজ আক্রান্ত "
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            >



        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"

        >
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#02F50E"
            />
        <TextView
            android:id="@+id/todayRecov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সুস্থ হয়েছে"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            >



        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"

        >


        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#FA0400"
            android:layout_marginRight="13dp"
            />
        <TextView
            android:id="@+id/todayDeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আজ মৃত্যু"
            android:paddingLeft="3dp"
            android:textStyle="bold"
            android:textColor="#000"
            >



        </TextView>

    </LinearLayout>


</LinearLayout>


</LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="390dp"
            app:cardElevation="80dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#DFDCDC"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="
কোভিড-১৯"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    ></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000">


                </View>



            </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFDCDC"
    android:layout_marginTop="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/bangladesh"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            android:elevation="30dp"
            android:layout_marginLeft="10dp"

            app:cardBackgroundColor="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="কোভিড -১৯\n বাংলাদেশ"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/coronavirus"
                android:drawablePadding="8dp"

                ></TextView>





        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/publicAwareness"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            android:elevation="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="

জনসাধারণের নির্দেশিকা"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/guidelinesss"
                android:drawablePadding="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                ></TextView>





        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/world"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            android:elevation="30dp"
            android:layout_marginLeft="10dp"

            app:cardBackgroundColor="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="কোভিড -১৯\n
বিশ্ব"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/coronavirus"
                android:drawablePadding="8dp"

                ></TextView>





        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Emergency"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            android:elevation="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="

জরুরী যোগাযোগ"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                ></TextView>





        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="300dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developed by"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"

                    ></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000">


                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/logo"
                        android:layout_margin="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        >

                    </ImageView>
                    <ImageView
                        android:id="@+id/web"
                        android:layout_width="25dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:background="#DFDCDC"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/web"/>

                    <ImageView
                        android:id="@+id/fb"
                        android:layout_width="23dp"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:background="#DFDCDC"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/circle_facebook"/>


                </LinearLayout>





            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>


